<div class="content">
  <div class="container">
    <div class="content_post">
      <p><%= @article.text %></p>
    </div>
    <% if user_signed_in? && current_user.id == @article.user_id %>
      <div class="more">
        <ul class="more_list">
          <li>
            <%= link_to 'EDIT', edit_article_path(@article.id), method: :get, class: "btn" %>
          </li>
          <li>
            <%= link_to 'DESTROY', article_path(@article.id), method: :delete, class: "btn" %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>