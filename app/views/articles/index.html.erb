<div class="content">
  <% @articles.each do |article| %>
    <div class="container">
      <div class="content_post">
        <p><%= article.text %></p>
      </div>
      <div class="more">
        <ul class="more_list">
          <li>
            <%= link_to 'SHOW', article_path(article.id), method: :get, class: "btn" %>
          </li>
          <% if user_signed_in? && current_user.id == article.user_id %>
            <li>
              <%= link_to 'EDIT', edit_article_path(article.id), method: :get, class: "btn" %>
            </li>
            <li>
              <%= link_to 'DESTROY', article_path(article.id), method: :delete, class: "btn" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>